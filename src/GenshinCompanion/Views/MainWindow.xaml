<Window
    x:Class="GenshinCompanion.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:GenshinCompanion.Core;assembly=GenshinCompanion.Core"
    xmlns:local="clr-namespace:GenshinCompanion.Views"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="{Binding Title}"
    Width="525"
    Height="350"
    prism:ViewModelLocator.AutoWireViewModel="True"
    ui:ControlHelper.CornerRadius="4"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.UseModernWindowStyle="True">
    <local:NavigationRootPage x:Name="RootPage" />
</Window>

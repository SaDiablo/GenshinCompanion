    <Style x:Key="LabelWishCountStyle" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource LabelForeground}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=TabBannersIndex}" Value="0">
                <Setter Property="Content" Value="{Binding CharacterBanner.TotalCount, UpdateSourceTrigger=PropertyChanged}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=TabBannersIndex}" Value="1">
                <Setter Property="Content" Value="{Binding WeaponBanner.TotalCount, UpdateSourceTrigger=PropertyChanged}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=TabBannersIndex}" Value="2">
                <Setter Property="Content" Value="{Binding StandardBanner.TotalCount, UpdateSourceTrigger=PropertyChanged}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=TabBannersIndex}" Value="3">
                <Setter Property="Content" Value="{Binding NoviceBanner.TotalCount, UpdateSourceTrigger=PropertyChanged}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

